        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
		
<script>
$('.l1').on('click', function () {
    var target = $(this).data('target');

    // Find the corresponding side-menu directly
    var sideMenu = $('.layer1#' + target + ' .side-menu');

    // Update navigation links within the specific side-menu
    sideMenu.find('.nav-link').attr('href', "#" + target);
    sideMenu.find('.nav-link').attr('value', target);

    // Show the specific side-menu
    sideMenu.removeClass('hide-menu');
    sideMenu.addClass('show-menu');

    // Show the content for the target directly
    $("#" + target).removeClass('hide-menu');
    $("#" + target).addClass('show-menu');
});

$('.nav-link').on('click', function () {
    var target = $(this).attr('data-target'); // Use data-target instead of value

    // Check if we are on the first page to avoid negative values
    if (target !== 'layer') {
        // Construct the URL for the previous page
        var back_link = "#" + target;

        // Find the corresponding side-menu directly
        var sideMenu = $('.layer1#' + target + ' .side-menu');

        // Update navigation links within the specific side-menu
        sideMenu.find('.nav-link').attr('href', back_link);
        sideMenu.find('.nav-link').attr('data-target', target); // Update data-target

        // Hide the current side-menu
        sideMenu.removeClass('show-menu');
        sideMenu.addClass('hide-menu');

        // Hide the content for the current target
        $("#" + target).removeClass('show-menu');
        $("#" + target).addClass('hide-menu');
    }
});

		</script>
